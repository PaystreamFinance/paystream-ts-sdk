{
    "compilerOptions": {
      "declaration": true,
      "module": "ESNext",
      "noImplicitAny": true,
      "esModuleInterop": true,
      "target": "ESNext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "strictNullChecks": true,
      "sourceMap": false,
      "rootDir": "src",
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*"]
      },
      "typeRoots": ["node_modules/@types"]
    },
    "include": ["src/**/*"]
  }